#include<stdio.h>
int find_Num(int);
int main()
{
    int n;
    printf("Enter a number : ");
    scanf("%d",&n);
    if(n%2==0)
	{
    printf("It is a even number",n);
    }
    else
    {
    printf("It is a odd number",n);
    }
    find_Num(n);
    return 0;
}
int find_Num(int n)
{
    return(n%2==0);
}
