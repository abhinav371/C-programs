#include  <stdio.h>
 int main()
{
    int i,n;
    float total=0,avg;
    printf ("Enter the value of : ");
    scanf("%d",&n);
    int array[n];
    printf("Enter %d numbers (-ve, +ve and zero) \n",n);
    for(i=0;i<n;i++)
    {
    scanf("%d", &array[i]);
    }
    printf("Input array elements \n");
    for (i=0;i<n;i++)
    {
    printf("%+3d\n", array[i]);
    }
    for (i=0;i<n;i++)
    {
    total+=array[i];
    }
    avg=total/n;
    printf("\n Sum of all numbers =  %.2f\n",total);
    printf("\n Average of all input numbers =  %.2f\n",avg);
}
