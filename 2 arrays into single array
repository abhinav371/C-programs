#include <stdio.h>
int main()
{  
    int a[10],b[10],c[10],i,j,x,y,z,k;           
    printf("\nEnter the size of first array : ");
    scanf("%d",&x);
    printf("\nEnter the size of second array : ");
    scanf("%d",&y);   
    z=x+y;
    printf("\nEnter the elements of first array : ");    
    for(i=0;i<x;i++)      
    {
       scanf("%d",&a[i]);
       c[i]=a[i];
    }
    k=x;
    printf("\nEnter the elements of second array : ");
    for(i=0;i<y;i++)    
    {
        scanf("%d",&b[i]);
        c[k]=b[i];
        k++;
    }
    printf("\nThe merged array: \n");
    for(i=0;i<z;i++)
    printf("%d ",c[i]);            
}
